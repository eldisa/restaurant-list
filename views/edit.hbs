<div class="container search-bar" >
    <div class="search-bar-outer">
        <div class="search-bar-inner" >

            <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
                <h4 class="mb-3">修改內容：</h4>
                <div class="row g-3 align-items-center mb-3">
                    <div class="col-auto">
                        <label for="restaurantName" class="col-form-label">餐廳名稱</label>
                    </div>
                    <div class="col-auto">
                        <input type="text" id="restaurantName" class="form-control" name="name" value='{{restaurant.name}}' placeholder="餐廳大名" required>
                    </div>
                    <span>＊</span>
                </div>

                <div class="row g-3 align-items-center mb-3">
                    <div class="col-auto">
                        <label for="restaurantEngName" class="col-form-label">英文名稱</label>
                    </div>
                    <div class="col-auto">
                        <input type="text" id="restaurantEngName" class="form-control" name="name_en" value='{{restaurant.name_en}}' placeholder="English only here.">
                    </div>
                </div>

                <div class="row g-3 align-items-center mb-3">
                    <div class="col-auto">
                        <label for="restaurantCategory" class="col-form-label">餐廳類型</label>
                    </div>
                    <div class="col-auto">
                        <select id="restaurantCategory" class="form-control" name="category">
                            <option value="{{restaurant.category}}">{{restaurant.category}}</option>
                            <option value="美式">美式</option>
                            <option value="道地台式">道地台式</option>
                            <option value="日本料理">日本料理</option>
                            <option value="義式餐廳">義式餐廳</option>
                            <option value="咖啡">咖啡</option>
                            <option value="中東料理">中東料理</option>
                            <option value="酒吧">酒吧</option>
                        </select>
                    </div>
                </div>

                <div class="row g-3 align-items-center mb-3">
                    <div class="col-auto">
                        <label for="restaurantLocation" class="col-form-label">餐廳地址</label>
                    </div>
                    <div class="col-auto">
                        <input type="text" id="restaurantLocation" class="form-control" name="location" value='{{restaurant.location}}' placeholder="地址的部分" required>
                    </div>
                    <span>＊</span>
                </div>

                <div class="row g-3 align-items-center mb-3">
                    <div class="col-auto">
                        <label for="restaurantGoogleMap" class="col-form-label">Google Map</label>
                    </div>
                    <div class="col-auto">
                        <input type="text" id="restaurantGoogleMap" class="form-control" name="google_map" value='{{restaurant.google_map}}' placeholder="分享座標的網址給我們吧" required>
                    </div>
                </div>

                <div class="row g-3 align-items-center mb-3">
                    <div class="col-auto">
                        <label for="restaurantPhone" class="col-form-label">電話號碼</label>
                    </div>
                    <div class="col-auto">
                        <input type="text" id="restaurantPhone" class="form-control" name="phone" value='{{restaurant.phone}}' placeholder="記得加上區碼喔" required>
                    </div>
                    <span>＊</span>
                </div>

                <div class="row g-3 align-items-center mb-3">
                    <div class="col-auto">
                        <label for="rating" class="col-form-label">推薦評分</label>
                    </div>
                    <div class="col-auto">
                        <select id="rating" class="form-control" name="rating" value='{{restaurant.rating}}' required>
                            <option value="{{restaurant.rating}}">{{restaurant.rating}}</option>
                            <option value="5">5</option>
                            <option value="4.9">4.9</option>
                            <option value="4.8">4.8</option>
                            <option value="4.7">4.7</option>
                            <option value="4.6">4.6</option>
                            <option value="4.5">4.5</option>
                            <option value="4.4">4.4</option>
                            <option value="4.3">4.3</option>
                            <option value="4.2">4.2</option>
                            <option value="4.1">4.1</option>
                            <option value="4">4</option>
                            <option value="3.9">3.9</option>
                            <option value="3.8">3.8</option>
                            <option value="3.7">3.7</option>
                            <option value="3.6">3.6</option>
                            <option value="3.5">3.5</option>
                            <option value="3.4">3.4</option>
                            <option value="3.3">3.3</option>
                            <option value="3.2">3.2</option>
                            <option value="3.1">3.1</option>
                            <option value="3">3</option>
                            <option value="2.9">2.9</option>
                            <option value="2.8">2.8</option>
                            <option value="2.7">2.7</option>
                            <option value="2.6">2.6</option>
                            <option value="2.5">2.5</option>
                            <option value="2.4">2.4</option>
                            <option value="2.3">2.3</option>
                            <option value="2.2">2.2</option>
                            <option value="2.1">2.1</option>
                            <option value="2">2</option>
                            <option value="1.9">1.9</option>
                            <option value="1.8">1.8</option>
                            <option value="1.7">1.7</option>
                            <option value="1.6">1.6</option>
                            <option value="1.5">1.5</option>
                            <option value="1.4">1.4</option>
                            <option value="1.3">1.3</option>
                            <option value="1.2">1.2</option>
                            <option value="1.1">1.1</option>
                            <option value="1">1</option>
                        </select>
                    </div>
                    <span>＊</span>
                </div>

                <div class="row g-3 align-items-center mb-3">
                    <div class="col-auto">
                        <label for="restaurantDescription" class="col-form-label">詳細內容</label>
                    </div>
                    <div class="col-auto">
                        <input type="text" id="restaurantDescription" class="form-control" name="description" value='{{restaurant.description}}' placeholder="寫點關於這間餐廳的描述吧">
                    </div>
                </div>

                <div class="row g-3 align-items-center mb-3">
                    <div class="col-auto">
                        <label for="restaurantImage" class="col-form-label">照片網址</label>
                    </div>
                    <div class="col-auto">
                        <input type="text" id="restaurantImage" class="form-control" name="image" placeholder="請將喜歡的照片的網址貼在此欄" value='{{restaurant.image}}'>
                    </div>
                </div>

                <div class="col-4 m-auto" style="display: inline;">
                    <button type="submit" class="btn btn-info btn-lg mr-3">修改</button>
                    <a href="/"><button type="button" class="btn btn-secondary btn-lg">返回</button></a>
                </div>
            </form>

        </div>
    </div>
</div>